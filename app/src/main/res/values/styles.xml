<resources>
    <!-- APARIENCIAS GRAFICAS -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MiTema" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/reddark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="formatoboton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">59dp</item>
        <item name="android:layout_below">@+id/imageView2</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
